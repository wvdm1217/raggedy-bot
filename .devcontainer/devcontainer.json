{
    "name": "Python 3.11",
    "image": "mcr.microsoft.com/devcontainers/python:3.11-bullseye",
    "postCreateCommand": "pip install -r requirements.txt",
    "customizations": {
        "vscode": {
            "extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"GitHub.copilot-chat",
				"GitHub.copilot",
				"Postman.postman-for-vscode"
			],
            "settings": {
                "terminal.integrated.shell.linux": "/bin/bash"
            }
        }
    }
}